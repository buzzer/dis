<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="data.Immobilie" table="AUFG3_IMMOBILIE">
		<id name="iid" column="IID">
			<generator class="increment" />
		</id>
		<property name="besitzer" type="integer" column="DNID" />
		<property name="wert" type="double" column="WERT" />
		<property name="hypothek" type="integer" column="DARLID" />
		
		<set name="besitzer" inverse="false">
			<key column="DNID"/>
			<one-to-many class="data.Darlehensnehmer"/>
		</set>
		<set name="hypothek" inverse="false">
			<key column="DARLID"/>
			<one-to-many class="data.Darlehen"/>
		</set>
		
	</class>
</hibernate-mapping>