<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="data.Lebensversicherung" table="AUFG3_VERSICHERT">
		<id name="vid" column="LEBVERSID">
			<generator class="increment" />
		</id>
		<property name="versicherter" type="integer" column="PERSID"/>
		<property name="versicherer"  type="integer" column="VERSUNID"/>
		<property name="betrag"       type="double"  column="BETRAG"/>
		
		<set name="versicherter" inverse="false">
			<key column="PERSID"/>
			<one-to-many class="data.Privatperson"/>
		</set>
		<set name="versicherer" inverse="false">
			<key column="VERSUNID"/>
			<one-to-many class="data.Versicherungsunternehmen"/>
		</set>
	</class>
</hibernate-mapping>